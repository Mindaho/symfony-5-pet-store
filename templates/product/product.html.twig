<div class="card" style="width: 18rem;">
    <img src="{{ asset('img/products/' ~ product.image) }}" class="card-img-top rounded p-2" alt="...">
    <div class="card-body">
        <h5 class="card-title">{{ product.name }}</h5>
        <p class="card-text">Price: {{ product.price|number_format(2, '.') }}</p>
        <p class="card-text">In stock: {{ product.stock.quantity }}</p>

        <div class="d-flex justify-content-between">
            <a href={{ path("order_product", {'id': product.id} ) }} href="/order/{{ product.id }}" class="btn btn-primary">Order</a>
            {% if is_granted(constant('App\\Constant\\UserConst::ROLE_ADMIN')) -%}
            <div class="d-flex align-items-center">
                <a class="btn btn-danger rounded text-white" href={{ path("product_delete", {'id': product.id }) }}>-</a>
            </div>
            {% endif %}
        </div>
    </div>
</div>